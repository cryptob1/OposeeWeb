            @Html.DisplayFor(modelItem => item.OwnerUserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HashTags)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => Convert.ToDateTime(item.CreationDate))
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.ModifiedDate)
        </td>*@
